{
  "version": "1.0.0",
  "models": {
    "sentiment_analyzer": {
      "type": "rule_based",
      "language": "es",
      "version": "1.0.0",
      "description": "Rule-based sentiment analysis for Spanish text"
    },
    "budget_optimizer": {
      "type": "thompson_sampling",
      "algorithm": "multi_armed_bandit",
      "version": "1.0.0",
      "channels": ["google_search", "meta_ads", "youtube", "display"]
    },
    "insight_generator": {
      "type": "template_nlg",
      "version": "1.0.0",
      "max_insights": 10,
      "min_confidence": 0.6
    }
  },
  "weights": {
    "search": 0.28,
    "trend": 0.15,
    "social": 0.22,
    "intent": 0.35
  },
  "thresholds": {
    "high_priority": {
      "impact_score": 7,
      "confidence": 0.8
    },
    "medium_priority": {
      "impact_score": 5,
      "confidence": 0.7
    }
  },
  "data_sources": {
    "google_trends": {
      "enabled": true,
      "refresh_frequency": "weekly"
    },
    "tiktok": {
      "enabled": true,
      "refresh_frequency": "weekly",
      "note": "Limited data for Peru region"
    },
    "meta": {
      "enabled": true,
      "refresh_frequency": "weekly"
    },
    "ga4": {
      "enabled": false,
      "note": "Pending API integration"
    }
  }
}
